<div id="slider-wrapper"
     tal:define="panes view/panes">
  <div id="slider-panes">
    <div tal:repeat="pane panes"
         class="sliderPane">

      <a class="prev">&nbsp;</a>
      <a class="next">&nbsp;</a>

      <div class="sliderImage"
           tal:content="structure pane/@@images/image"
           />
      <div class="sliderText"
           tal:condition="pane/text">
        <h2 tal:condition="pane/title" tal:content="pane/title"
            class="documentFirstHeading"/>
        <span tal:content="structure pane/text/output" />
      </div>
    </div>

  </div>

</div>
<div id="slider-navi"></div>

<div class="visualClear"><!-- --></div>
